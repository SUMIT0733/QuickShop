<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimarylight"
    android:orientation="vertical"
    tools:context=".Sel_Complete_Order">

            <Spinner
                android:id="@+id/com_spinner"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:background="@drawable/addcart_text_border"
                android:textAlignment="center"
                android:entries="@array/choose_shop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:background="@color/colorPrimarylight"
        android:orientation="vertical">

            <ListView
                android:id="@+id/com_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null"
                android:scrollbars="none"/>

        <ImageView
            android:id="@+id/com_no_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/qs"
            android:alpha="0.2"/>
    </LinearLayout>
        </LinearLayout>






