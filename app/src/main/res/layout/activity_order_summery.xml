<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp">

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/done"
        android:layout_gravity="center" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Order Detail"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"
            android:background="@drawable/edit_square"
            android:textColor="@color/black"
            android:gravity="center"
            android:padding="7dp"
            android:textStyle="bold"
            android:textSize="17sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Order id"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"/>
        <TextView
            android:id="@+id/sum_order_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Order id : 26022019001"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/white"/>

        <LinearLayout
            android:id="@+id/offer_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp">
                <TextView
                    android:id="@+id/sum_item_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text=" 1.  Milk  *  3" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_300" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total amount"
                    android:textColor="@color/black"
                    android:padding="2dp"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/sum_total_amt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_alignParentEnd="true"
                    android:text="\u20b9 150"
                    android:layout_marginEnd="15dp"
                    android:textSize="14sp"
                    android:padding="2dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Packaging charge"
                    android:textColor="@color/black"
                    android:padding="2dp"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/sum_charges_amt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_alignParentEnd="true"
                    android:text="\u20b9 10"
                    android:layout_marginEnd="15dp"
                    android:textSize="14sp"
                    android:padding="2dp"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2.5dp"
                android:layout_marginBottom="2.5dp"
                android:background="@color/grey_500" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Payable amount"
                    android:textColor="@color/black"
                    android:padding="2dp"
                    android:textStyle="bold"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/sum_payable_amt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_alignParentEnd="true"
                    android:text="\u20b9 160"
                    android:layout_marginEnd="15dp"
                    android:textSize="15sp"
                    android:padding="2dp"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="2.5dp"
                android:layout_marginBottom="2.5dp"
                android:background="@color/grey_500" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
            android:id="@+id/sum_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="QUICKSHOP( Katargam ) "
            android:layout_gravity="center"
            android:textSize="18sp" />
        <View
            android:layout_width="150dp"
            android:layout_height="1.5dp"
            android:layout_marginTop="5dp"
            android:background="@color/black"
            android:layout_gravity="center"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp" />
        <TextView
            android:id="@+id/sum_shop_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:text="49, Karunasagar, Opp.Avalon\nSurat - 395004\ncontact : 9876543210"
            android:gravity="center"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Pickup Details"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="17sp"/>
        <View
            android:layout_width="90dp"
            android:layout_height="1.5dp"
            android:layout_marginTop="5dp"
            android:background="@color/black"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/sum_pickup_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="25-02-2019"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/sum_pickup_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="gfgfgf"
            android:textSize="14sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="15dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Customer Detail"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"
            android:textColor="@color/black"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="17sp"/>
        <View
            android:layout_width="100dp"
            android:layout_height="1.5dp"
            android:layout_marginTop="5dp"
            android:background="@color/black"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/sum_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prince Gabani"
            android:textAllCaps="true"
            android:layout_gravity="center"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/sum_user_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="7779004422" />
        <View
            android:layout_width="match_parent"
            android:layout_height="50dp" />
        <Button
            android:id="@+id/sum_next_btn"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_gravity="bottom"
            android:background="@color/red_300"
            android:text="@string/continue_shopping"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:elevation="15dp"
            android:textStyle="bold"/>




    </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>
